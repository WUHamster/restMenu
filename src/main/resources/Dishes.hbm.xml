<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="menu.Dishes" table="Dishes">
        <id  name="id" column="id" type="java.lang.Long">
            <generaor class="increment"/>
        </id>
        <property column="name" name="name" type="java.lang.String"/>
        <property column="price" name="price" type="java.lang.Integer"/>
        <property column="weight" name="weight" type="java.lang.Integer"/>
        <property column="discount" name="discount" type="java.lang.Boolean"/>
    </class>

</hibernate-mapping>